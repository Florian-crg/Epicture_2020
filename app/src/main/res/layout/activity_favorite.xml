<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D7E8EF"
        tools:context="com.example.epicture.PhotosActivity" >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/new_logo"
            android:layout_centerVertical="true"/>


    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/favorite_photos">
        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="650dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_of_photos">
        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#D7E8EF">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_active_24dp"
                android:id="@+id/home_button"
                android:layout_toStartOf="@+id/favorites_button"
                android:layout_alignParentBottom="true"

                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_black_24dp"
                android:id="@+id/favorites_button"
                android:layout_toStartOf="@+id/hide_button"
                android:layout_alignParentBottom="true"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/hide_button"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_black_24dp"
                android:id="@+id/search_button"
                android:layout_toEndOf="@+id/hide_button"
                android:layout_alignParentBottom="true"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_24dp"
                android:id="@+id/profil_button"
                android:layout_toEndOf="@+id/search_button"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

